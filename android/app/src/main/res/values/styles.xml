<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Splash / Launch theme (sin ActionBar) -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>

    <!-- NormalTheme para Flutter (antes de que arranque Flutter UI) -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>

    <!-- Tema principal de tu app: Material3 DayNight -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Permite dark mode automático -->
        <item name="android:forceDarkAllowed">true</item>
        <!-- Habilita Dynamic Color (Material You) en Android 12+ -->
        <item name="android:windowEnableSplitTouch">true</item>
    </style>

    <!-- Tema para tu widget, hereda de AppTheme -->
    <style name="Theme.Material3.Widget.AppWidget" parent="AppTheme">
        <!-- No necesitas redeclarar colorSurfaceVariant aquí -->
    </style>
    
    <!-- NUEVOS ESTILOS PARA EL TEXTO DEL WIDGET -->
    <style name="Widget.Text.Title" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.Text.Balance" parent="android:Widget.TextView">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif-black</item> <!-- Usamos "black" para máxima negrita -->
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    
</resources>
