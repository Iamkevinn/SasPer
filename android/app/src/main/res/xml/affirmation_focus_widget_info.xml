<!-- Widget Info - Configuración del Widget de Afirmación -->
<!-- ========================================= -->
<appwidget-provider 
    xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:minWidth="40dp"
    android:minHeight="40dp"
    
    android:minResizeWidth="40dp"
    android:minResizeHeight="40dp"

    android:targetCellWidth="4"
    android:targetCellHeight="3"
    
    android:updatePeriodMillis="0"
    android:initialLayout="@layout/affirmation_focus_widget"
    android:previewImage="@drawable/widget_view_future"
    
    android:resizeMode="horizontal|vertical"
    
    android:widgetCategory="home_screen"
    android:description="@string/affirmation_widget_description"
    android:initialKeyguardLayout="@layout/affirmation_focus_widget">
</appwidget-provider>