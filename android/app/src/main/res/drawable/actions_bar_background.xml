<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Un gradiente oscuro y sutil en lugar de un color sÃ³lido -->
    <gradient
        android:type="linear"
        android:angle="270"
        android:startColor="#66000000"
        android:endColor="#80000000"/>

    <!-- Un borde muy fino y semi-transparente en la parte superior para el efecto "vidrio" -->
    <stroke
        android:width="1dp"
        android:color="#33FFFFFF" /> <!-- Blanco con ~20% opacidad -->

    <!-- Mantenemos las esquinas redondeadas -->
    <corners
        android:bottomLeftRadius="24dp"
        android:bottomRightRadius="24dp" />
</shape>