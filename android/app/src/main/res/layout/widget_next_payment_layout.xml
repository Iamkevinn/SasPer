<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_next_payment_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:theme="@style/Theme.AppWidget">

    <LinearLayout
        android:id="@+id/widget_next_payment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="12dp">

            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/widget_payment_icon_background">

                <ImageView
                    android:id="@+id/widget_payment_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_payment"
                    android:tint="?attr/colorOnErrorContainer"
                    android:contentDescription="@string/payment_icon_description" />
            </FrameLayout>

            <TextView
                android:id="@+id/widget_next_payment_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="@string/widget_title_next_payment"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="sans-serif-medium"
                android:textSize="16sp"
                android:letterSpacing="0.01" />

            <FrameLayout
                android:id="@+id/urgency_badge_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/urgency_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/payment_urgent"
                    android:background="@drawable/widget_urgency_badge"
                    android:textColor="?attr/colorOnError"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="10sp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:letterSpacing="0.03"
                    tools:text="URGENTE" />
            </FrameLayout>
        </LinearLayout>

        <!-- Divisor (Corregido con FrameLayout) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorOutlineVariant"
            android:alpha="0.5"
            android:layout_marginBottom="16dp" />

        <!-- CONTENIDO -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- Vista con pago pendiente -->
            <LinearLayout
                android:id="@+id/next_payment_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top"
                    android:background="@drawable/widget_payment_card_background"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingEnd="12dp"
                        tools:ignore="RtlSymmetry">

                        <TextView
                            android:id="@+id/tv_next_payment_concept"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/payment_concept_placeholder"
                            android:textColor="?attr/colorOnSurface"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="17sp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            tools:text="Tarjeta de CrÃ©dito" />

                        <TextView
                            android:id="@+id/tv_payment_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/payment_category_placeholder"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:fontFamily="sans-serif"
                            android:textSize="12sp"
                            android:alpha="0.8"
                            android:maxLines="1"
                            android:ellipsize="end"
                            tools:text="Banco Nacional" />

                        <LinearLayout
                            android:layout_marginTop="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/ic_calendar_small"
                                android:tint="?attr/colorOnSurfaceVariant"
                                android:alpha="0.7"
                                android:contentDescription="@null" />

                            <TextView
                                android:id="@+id/tv_next_payment_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:text="@string/payment_date_placeholder"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:fontFamily="sans-serif"
                                android:textSize="13sp"
                                tools:text="15 de noviembre" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_days_until_payment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/days_until_payment"
                            android:textColor="?attr/colorError"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="12sp"
                            tools:text="Vence en 3 dÃ­as" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/tv_next_payment_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/currency_format"
                            android:textColor="?attr/colorError"
                            android:fontFamily="sans-serif-black"
                            android:textSize="28sp"
                            tools:text="$850K" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/to_pay_label"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:fontFamily="sans-serif"
                            android:textSize="11sp"
                            android:alpha="0.7" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Barra de estado de urgencia (Corregido con FrameLayout) -->
                <FrameLayout
                    android:id="@+id/urgency_bar_container"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="16dp">

                    <FrameLayout
                        android:id="@+id/urgency_bar_background"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/colorSurfaceContainerHighest" />

                    <FrameLayout
                        android:id="@+id/urgency_bar_progress"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="?attr/colorError"
                        tools:layout_width="200dp" />
                </FrameLayout>

                <!-- Acciones rÃ¡pidas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/mark_as_paid_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/widget_primary_button_background"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12dp"
                        android:layout_marginEnd="6dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_check"
                            android:tint="?attr/colorOnPrimary"
                            android:contentDescription="@null" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="@string/mark_as_paid"
                            android:textColor="?attr/colorOnPrimary"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/snooze_payment_button"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginStart="6dp"
                        android:background="@drawable/widget_secondary_button_background"
                        android:src="@drawable/ic_snooze"
                        android:tint="?attr/colorOnSurfaceVariant"
                        android:contentDescription="@string/snooze_payment_description" />
                </LinearLayout>
            </LinearLayout>

            <!-- EMPTY STATE -->
            <LinearLayout
                android:id="@+id/empty_view_next_payment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                tools:visibility="gone">

                <FrameLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/widget_success_background">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_check_circle"
                        android:tint="?attr/colorPrimary"
                        android:contentDescription="@null" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/no_pending_payments_title"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/no_pending_payments_message"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:fontFamily="sans-serif"
                    android:textSize="13sp"
                    android:alpha="0.8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="ðŸŽ‰"
                    android:textSize="32sp" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>