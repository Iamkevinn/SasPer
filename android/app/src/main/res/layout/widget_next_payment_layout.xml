<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_next_payment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/widget_background_m3">

    <!-- Título del Widget -->
    <TextView
        android:id="@+id/widget_next_payment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Próximo Pago"
        style="@android:style/TextAppearance.Material.Body2"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginBottom="4dp"/>

    <!-- Contenido principal (se oculta si no hay datos) -->
    <LinearLayout
        android:id="@+id/next_payment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Columna para Concepto y Fecha -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_next_payment_concept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Concepto del Pago"
                style="@android:style/TextAppearance.Material.Title"
                android:textColor="?android:attr/textColorPrimary"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tv_next_payment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dd/MM/yyyy"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Monto a la derecha -->
        <TextView
            android:id="@+id/tv_next_payment_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="€0.00"
            style="@android:style/TextAppearance.Material.Headline"
            android:textColor="@android:color/holo_red_light"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Vista para cuando no hay pagos pendientes -->
    <TextView
        android:id="@+id/empty_view_next_payment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Estás al día 👍"
        style="@android:style/TextAppearance.Material.Body1"
        android:textColor="?android:attr/textColorSecondary"
        android:visibility="gone" />

</LinearLayout>