<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:theme="@style/Theme.AppWidget"> <!-- [CORRECCIÓN] Tema añadido -->

    <LinearLayout
        android:id="@+id/widget_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="12dp">

            <FrameLayout
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/widget_payments_header_icon_bg">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_payments_schedule"
                    android:tint="?attr/colorOnErrorContainer"
                    android:contentDescription="@string/payments_widget_icon_description" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/widget_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/widget_title_upcoming_payments"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/widget_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/payments_count_placeholder"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:fontFamily="sans-serif"
                    android:textSize="12sp"
                    android:alpha="0.7"
                    tools:text="5 pagos pendientes" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/filter_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/widget_icon_button_background"
                android:src="@drawable/ic_filter"
                android:tint="?attr/colorOnSurfaceVariant"
                android:contentDescription="@string/filter_payments_description" />
        </LinearLayout>

        <!-- [CORRECCIÓN] Reemplazado <FrameLayout> por <FrameLayout> -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorOutlineVariant"
            android:alpha="0.5"
            android:layout_marginBottom="12dp" />

        <!-- LISTA DE PAGOS -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ListView
                android:id="@+id/lv_upcoming_payments"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@android:color/transparent"
                android:dividerHeight="8dp"
                android:scrollbars="none"
                android:clipToPadding="false"
                android:paddingBottom="8dp" />

            <LinearLayout
                android:id="@+id/empty_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                tools:visibility="visible">

                <FrameLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/widget_success_background">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_check_circle"
                        android:tint="?attr/colorPrimary"
                        android:contentDescription="@null" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/no_upcoming_payments_title"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginHorizontal="32dp"
                    android:text="@string/no_upcoming_payments_message"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:fontFamily="sans-serif"
                    android:textSize="13sp"
                    android:alpha="0.8"
                    android:gravity="center" />
            </LinearLayout>
        </FrameLayout>

        <!-- FOOTER -->
        <LinearLayout
            android:id="@+id/payments_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="visible">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_info_small"
                android:tint="?attr/colorSecondary"
                android:alpha="0.7"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/info_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="@string/payments_info_message"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="sans-serif"
                android:textSize="11sp"
                android:alpha="0.8"
                tools:text="Tienes 2 pagos esta semana" />

            <ImageButton
                android:id="@+id/calendar_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/widget_icon_button_background"
                android:src="@drawable/ic_calendar"
                android:tint="?attr/colorPrimary"
                android:contentDescription="@string/view_calendar_description" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>