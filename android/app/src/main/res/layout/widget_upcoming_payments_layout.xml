<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/widget_background_m3">

    <TextView
        android:id="@+id/widget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Próximos Pagos"
        style="@android:style/TextAppearance.Material.Title"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="8dp"/>

    <ListView
        android:id="@+id/lv_upcoming_payments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="0dp" />

    <TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="No hay pagos pendientes"
        style="@android:style/TextAppearance.Material.Body1"
        android:textColor="?android:attr/textColorSecondary" /> <!-- <<<<<<< CORRECCIÓN AQUÍ -->

</LinearLayout>