<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_large_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background_m3"
    android:padding="20dp"
    android:clipToPadding="false"
    android:theme="@style/Theme.AppWidget"> <!-- [CORRECCIÓN] Tema aplicado a la raíz -->

    <!-- HEADER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/widget_large_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resumen Financiero"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="sans-serif-medium"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/widget_large_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/period_this_month"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="sans-serif"
                android:layout_marginTop="2dp"
                android:alpha="0.87"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/widget_large_add_button"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_add"  
            android:background="@drawable/widget_action_button_background"
            android:tint="?attr/colorOnSecondaryContainer"
            android:contentDescription="@string/add_transaction_description"/>
    </LinearLayout>

    <!-- PRESUPUESTOS -->
    <LinearLayout
        android:id="@+id/budgets_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">
        <TextView
            android:id="@+id/widget_large_budgets_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Presupuestos"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />
        <include
            layout="@layout/widget_large_budget_item"
            android:id="@+id/budget_item_1"
            android:visibility="gone" />
        <include
            layout="@layout/widget_large_budget_item"
            android:id="@+id/budget_item_2"
            android:layout_marginTop="8dp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- [CORRECCIÓN] Divisor con FrameLayout -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorOutlineVariant"
        android:alpha="0.3"
        android:layout_marginBottom="16dp"/>

    <!-- ÚLTIMOS MOVIMIENTOS -->
    <LinearLayout
        android:id="@+id/transactions_section"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/widget_large_transactions_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Últimos movimientos"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />
        <include
            layout="@layout/widget_large_transaction_item"
            android:id="@+id/transaction_item_1"
            android:visibility="gone" />
        <include
            layout="@layout/widget_large_transaction_item"
            android:id="@+id/transaction_item_2"
            android:layout_marginTop="8dp"
            android:visibility="gone" />
        <include
            layout="@layout/widget_large_transaction_item"
            android:id="@+id/transaction_item_3"
            android:layout_marginTop="8dp"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>